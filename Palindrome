include <stdio.h>

int main() {
    char str[100];
    int i, len = 0;

    printf("Enter a string: ");
    scanf("%s", str);   // reads a single word

 
    while (str[len] != '\0') {
        len++;
    }


    for (i = 0; i < len / 2; i++) {
        if (str[i] != str[len - i - 1]) {
            printf("String is not a palindrome\n");
            return 0;
        }
    }

    printf("String is a palindrome\n");
    return 0;
}
